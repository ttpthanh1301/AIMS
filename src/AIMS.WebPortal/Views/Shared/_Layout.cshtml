<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] — AIMS | DEHA Việt Nam</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"          rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"          rel="stylesheet" />

    <style>
            :root {
                --aims-primary: #0d6efd;
                --aims-sidebar-bg: #1e2a3a;
                --aims-sidebar-w: 260px;
            }

            body {
                background: #f0f2f5;
                font-family: 'Segoe UI', sans-serif;
            }

            /* ── Sidebar ────────────────────────────────────── */
            #sidebar {
                width: var(--aims-sidebar-w);
                min-height: 100vh;
                background: var(--aims-sidebar-bg);
                position: fixed;
                top: 0;
                left: 0;
                z-index: 1000;
                transition: transform .25s ease;
            }

            #sidebar .brand {
                padding: 1.25rem 1.5rem;
                border-bottom: 1px solid rgba(255, 255, 255, .1);
            }

            #sidebar .brand img {
                width: 32px;
                margin-right: 8px;
            }
            #sidebar .brand span {
                color: #fff;
                font-weight: 700;
                font-size: 1.1rem;
            }

            #sidebar .nav-link {
                color: rgba(255, 255, 255, .7);
                padding: .55rem 1.5rem;
                border-radius: 6px;
                margin: 2px 8px;
                transition: all .2s;
            }

            #sidebar .nav-link:hover,
            #sidebar .nav-link.active {
                background: rgba(255, 255, 255, .12);
                color: #fff;
            }

            #sidebar .nav-link i {
                width: 20px;
                margin-right: 8px;
            }

            #sidebar .nav-section {
                color: rgba(255, 255, 255, .4);
                font-size: .7rem;
                text-transform: uppercase;
                letter-spacing: 1px;
                padding: .75rem 1.5rem .25rem;
            }

            /* ── Main content ───────────────────────────────── */
            #main-content {
                margin-left: var(--aims-sidebar-w);
                min-height: 100vh;
                display: flex;
                flex-direction: column;
            }

            /* ── Topbar ─────────────────────────────────────── */
            .topbar {
                background: #fff;
                height: 60px;
                box-shadow: 0 1px 4px rgba(0, 0, 0, .08);
                display: flex;
                align-items: center;
                padding: 0 1.5rem;
                position: sticky;
                top: 0;
                z-index: 999;
            }

            .page-content {
                padding: 1.5rem;
                flex: 1;
            }

            @@media (max-width: 768px) {
                #sidebar {
                    transform: translateX(-100%);
                }
                #sidebar.show {
                    transform: translateX(0);
                }
                #main-content {
                    margin-left: 0;
                }
            }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>

    @if (User.Identity?.IsAuthenticated == true)
    {
        <!-- ── Sidebar ── -->
        <nav id="sidebar">
            <div class="brand">
                <i class="bi bi-mortarboard-fill text-primary fs-4"></i>
                <span>AIMS</span>
                <div class="text-muted" style="font-size:.7rem;margin-top:2px">DEHA Việt Nam</div>
            </div>
            @await Html.PartialAsync("_Sidebar")
        </nav>

        <!-- ── Main ── -->
        <div id="main-content">
            <!-- Topbar -->
            <div class="topbar">
                <button class="btn btn-sm btn-outline-secondary d-md-none me-2"
                        onclick="document.getElementById('sidebar').classList.toggle('show')">
                    <i class="bi bi-list"></i>
                </button>
                <span class="text-muted">@ViewData["Title"]</span>
                <div class="ms-auto d-flex align-items-center gap-3">
                    <span class="badge bg-primary">@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</span>
                    <a asp-controller="Account" asp-action="Logout"      class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-box-arrow-right"></i> Đăng xuất
                    </a>
                </div>
            </div>

            <!-- Page content -->
            <main class="page-content">
                @RenderBody()
            </main>

            <footer class="text-center text-muted py-3" style="font-size:.8rem;">
                © 2025 AIMS — DEHA Việt Nam
            </footer>
        </div>
    }
    else
    {
        <!-- Layout đơn giản khi chưa đăng nhập -->
        @RenderBody()
    }

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Chart.js (dùng cho Dashboard) -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>