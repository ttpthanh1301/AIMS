@{
    ViewData["Title"] = "Dashboard";
}

<div class="row g-4 mb-4">
    @* ── Stat Cards ── *@
    <div class="col-sm-6 col-xl-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body d-flex align-items-center gap-3">
                <div class="rounded-3 bg-primary bg-opacity-10 p-3">
                    <i class="bi bi-person-plus text-primary fs-3"></i>
                </div>
                <div>
                    <div class="text-muted small">Ứng viên mới</div>
                    <div class="fs-4 fw-bold">24</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-xl-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body d-flex align-items-center gap-3">
                <div class="rounded-3 bg-success bg-opacity-10 p-3">
                    <i class="bi bi-people text-success fs-3"></i>
                </div>
                <div>
                    <div class="text-muted small">Thực tập sinh</div>
                    <div class="fs-4 fw-bold">12</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-xl-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body d-flex align-items-center gap-3">
                <div class="rounded-3 bg-warning bg-opacity-10 p-3">
                    <i class="bi bi-kanban text-warning fs-3"></i>
                </div>
                <div>
                    <div class="text-muted small">Tasks hôm nay</div>
                    <div class="fs-4 fw-bold">8</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-xl-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body d-flex align-items-center gap-3">
                <div class="rounded-3 bg-info bg-opacity-10 p-3">
                    <i class="bi bi-award text-info fs-3"></i>
                </div>
                <div>
                    <div class="text-muted small">Chứng chỉ đã cấp</div>
                    <div class="fs-4 fw-bold">5</div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white fw-semibold border-0 pt-3">
        <i class="bi bi-bar-chart text-primary"></i> Tổng quan hệ thống
    </div>
    <div class="card-body">
        <canvas id="dashChart" height="80"></canvas>
    </div>
</div>

@section Scripts {
<script>
new Chart(document.getElementById('dashChart'), {
    type: 'bar',
    data: {
        labels: ['T2','T3','T4','T5','T6','T7','CN'],
        datasets: [{
            label: 'CV nộp vào',
            data: [3, 7, 5, 9, 4, 2, 1],
            backgroundColor: 'rgba(13,110,253,.7)',
            borderRadius: 6,
        },{
            label: 'Task hoàn thành',
            data: [5, 4, 8, 6, 9, 3, 2],
            backgroundColor: 'rgba(25,135,84,.7)',
            borderRadius: 6,
        }]
    },
    options: { plugins: { legend: { position: 'top' } } }
});
</script>
}